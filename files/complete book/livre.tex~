    %Coin haut
    \draw[color=orange, line width=4pt] (-8,1) -- (-8,5);
    \draw[color=orange, line width=4pt] (-8.5,4.5) -- (-4,4.5);
    %Mon cahier de recettes
    \draw[color=orange] (-8,2) node[right] {{\bsi{70pt}{75pt}Mon cahier}};
