%%%%% Nom de la recette
% Premier argument optionnel : nom court
% Deuxième argument : nom de la recette
% Exemple 1 : \recette[muffins]{Muffins aux pépites de chocolat}
% Exemple 2 : \recette{Clafoutis}
\newcommand*{\recette}[2][]
{%
    \stepcounter{numrecette}
    \def\recipename
    {%
        #2
    }
    \def\shortrecipename
    {%
        #2
    }
    \@ifnotempty{#1}{%
        \def\shortrecipename
        {%
            #1
        }
    }
}

