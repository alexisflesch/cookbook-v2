\newcommand{\bsi}[2]
{%
  \fontencoding{T1}
  \fontfamily{\thefont}
  \fontseries{xl}
  \fontshape{n}%
  \fontsize{#1}{#2}
  \selectfont
}
\newcommand{\bsii}[2]
{%
  \fontencoding{T1}
  \fontfamily{lmr}
